{
	"env": {
		"amd": true,
		"browser": true,
		"es6": true,
		"jquery": true,
		"node": true
	},
    "extends": "eslint:recommended",
    "parserOptions": {
  		"sourceType": "module",
  		"ecmaVersion": 2017,
  		"ecmaFeatures": {
  			"jsx": true
  		}
  	},
    "rules": {
        "no-console": "off",
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "windows"
        ],
        "quotes": [
            "warn",
            "double"
        ],
        "semi": [
            "warn",
            "always"
        ]
    }
}
